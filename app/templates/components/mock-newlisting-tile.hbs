{{yield}}

<div class="row">
  <div class="col-xs-2 col-xs-offset-9">
    <span class="btn btn-primary" {{action 'showNewListForm'}}>Add Listing</span>
  </div>
</div>

{{#if showAddListing}}
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <h3>New Listing</h3>
      <div class="well">
        <div class="row">
          <span class="btn btn-danger" style="margin-left:40em;" {{action 'hideNewListing'}}>x</span>          
        </div>
        <span class="label label-default">Category</span>
        <div class="row" style="margin-top:0.25em;">
          <select style="margin-left:1.15em;">
            {{#each categories as |c|}}
              <option value={{c.name}}>
                {{c.name}}
              </option>
            {{/each}}
          </select>
          <div class="container" style="margin-top:0.25em;">
            <span class="label label-default">Information</span>
            <div class="container" style="margin-top:0.25em;">
              {{textarea cols="60" rows="4" value=info id="info"}}
            </div>
            <div class="col-xs-2 col-xs-offset-5">
              <span class="btn btn-primary" {{action 'addListing'}}>Add</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/if}}
